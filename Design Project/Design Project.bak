+ vdd 0 0 ra2mux[4:0] bdata[31:0] //B read port
+ 0 clk werf wa[4:0] wdata[31:0] //write port
+ $memory width=32 nlocations=31
+ contents=(0x00000000 0x00000000 0x00000000)
.ends


